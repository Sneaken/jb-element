.jb-button--text
  border-color transparent
  padding-left 0
  padding-right 0
  color #409eff
  background 0 0
  &:focus,
  &:hover
    color #66b1ff
    border-color transparent
    background-color transparent
  &:active
    color #3a8ee6
    background-color transparent
  &.is-disabled,
  &.is-disabled:focus,
  &.is-disabled:hover,
  &:active
    border-color transparent

.jb-button--medium
  padding 10px 20px
  font-size 14px
  border-radius 4px
  &.is-round
    padding 10px 20px
  &.is-circle
    padding 10px

.jb-button--mini
  border-radius 3px
  padding 7px 15px
  font-size 12px
  &.is-round
    padding 7px 15px
  &.is-circle
    padding 7px

.jb-button--small
  border-radius 3px
  padding 9px 15px
  font-size 12px
  &.is-round
    padding 9px 15px
  &.is-circle
    padding 9px

.jb-button-group
  display inline-block
  vertical-align middle
  &::after,
  &::before
    display table
    content ""
  &::after
    clear both
  & > .jb-button
    float left
    position relative
  & > .jb-button + .jb-button
    margin-left 0
  & > .jb-button:first-child
    border-top-right-radius 0
    border-bottom-right-radius 0
  & > .jb-button:last-child
    border-top-left-radius 0
    border-bottom-left-radius 0
  & > .jb-button:first-child:last-child
    border-radius 4px
  & > .jb-button:first-child:last-child.is-round
    border-radius 20px
  & > .jb-button:first-child:last-child.is-circle
    border-radius 50%
  & > .jb-button:not(:first-child):not(:last-child)
    border-radius 0
  & > .jb-button:not(:last-child)
    margin-right -1px
  & > .el-dropdown > .jb-button
    border-top-left-radius 0
    border-bottom-left-radius 0
    border-left-color rgba(255, 255, 255, 0.5)
  & .jb-button--primary:first-child
    border-right-color rgba(255, 255, 255, 0.5)
  & .jb-button--primary:last-child
    border-left-color rgba(255, 255, 255, 0.5)
  & .jb-button--primary:not(:first-child):not(:last-child)
    border-left-color rgba(255, 255, 255, 0.5)
    border-right-color rgba(255, 255, 255, 0.5)
  & .jb-button--success:first-child
